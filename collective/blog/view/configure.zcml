<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.blog.view">

  <browser:page
      for="*"
      name="blog_view"
      class=".blog.BlogView"
      template="blog.pt"
      permission="zope2.View"
      />

  <browser:page
      for="*"
      name="blog_item_view"
      class=".default_item.DefaultItemView"
      permission="zope2.View"
      />

</configure>
